<% content_for :head do -%>
  <%= javascript_include_tag 'jquery-1.3.2.min' %>
  <%= javascript_include_tag 'jquery.validate.pack' %>
  <%= javascript_include_tag 'jquery.product_reviews_ratings' %>
  <%= stylesheet_link_tag 'product_reviews_ratings' %>
<% end -%>

<% if current_user %>
<%= hidden_field(:reviews_ratings, :user_id, :value => current_user.id) %>
<%= hidden_field(:reviews_ratings, :product_id, :value => product.id) %>
<h3 id="review_and_rating">Review and Rate this Product</h3>
<p id="success"></p>

<% if Spree::ProductReviewsRatings::Config[:can_rate_product] == 1 -%>
<%= render :partial => 'ratings/form', :locals => { :product => product } %>
<% end -%>
<% if Spree::ProductReviewsRatings::Config[:can_review_product] == 1 -%>
<%= render :partial => 'reviews/form', :locals => { :product => product } %>
<% end -%>

<% else -%>
TODO: Fix this so it only gets set onclick.
<% session[:return_to] = request.request_uri %>
<p><%= link_to t('log_in'), login_path %></p>
<% end -%>
