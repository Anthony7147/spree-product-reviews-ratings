<div id="reviews">
  <p>
    <label for="title">Title</label><%= text_field :review, :title, { :value => @user_review.title } %>
  </p>
  <p>
    <label for="content">Content</label><%= text_area(:review, :content, { :rows => 5, :cols => 40, :value => @user_review.content }) %>
  </p>
  <div id="submit"></div>
  <% if @user_review.id -%>
  <div id="delete"><%= @user_review.id %></div>
  <p id="review_alert">Your review can be edited or deleted.</p>
  <% end -%>
</div>
